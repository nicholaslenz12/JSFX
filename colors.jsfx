desc:Colors

@init
function colors_create(r, g, b) (
    this.r = r;
    this.g = g;
    this.b = b;
);

function set_from_values(r, g, b) (
    gfx_r = r;
    gfx_g = g;
    gfx_b = b;
);

function set_from_colors() (
    gfx_r = this.r;
    gfx_g = this.g;
    gfx_b = this.b;
);

function black() (
    gfx_r = 0;
    gfx_g = 0;
    gfx_b = 0;
);
function white() (
    gfx_r = 1;
    gfx_g = 1;
    gfx_b = 1;
);