// This is my first JSFX, it should change a signal to mono.

desc: Mono

slider1:0<0,2,1{Left,Right,Stereo}>Channel Mode
slider2:0<-30,12,1>Output Gain

in_pin:left input
in_pin:right input
out_pin:left output
out_pin:right output

@slider

mode = slider1
gain = 2^(slider2/6)

@sample

mode == 0 ?
(
  spl0 = gain*spl0;
  spl1 = spl0;
);
mode == 1 ?
(
  spl1 = gain*spl1;
  spl0 = spl1;
);
mode == 2 ?
(
  average = 0.5*(spl0 + spl1);
  spl0    = gain*average;
  spl1    = gain*average;
);
