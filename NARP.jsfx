desc:NARP
options:gfx_hz=60

import knobs.jsfx
import shapes.jsfx

// ----------------------------------------------------------------------------
// SLIDER DEFINITIONS
// ----------------------------------------------------------------------------
slider1:1<0,6,1{1/1,1/2, 1/4, 1/8, 1/16, 1/32, 1/64}>-Rate (Synced)

// ----------------------------------------------------------------------------
// DEFAULT CHANNEL CONFIGURATION
// ----------------------------------------------------------------------------
in_pin:left input
in_pin:right input
out_pin:left output
out_pin:right output

// ----------------------------------------------------------------------------
// INIT
// ----------------------------------------------------------------------------
@init
gfx_ext_retina = 1;

knob1.knob_create(1/2, 1/2, 1/5, 0, 6, 1, 3);
knob1.font.font_create(1, "Arial", 0.1); // wrapper around gfx_setfont
knob1.formatter.formatter_create("1/%d", "Power", "");
knob1.colors_shapes.colors_create(1, 1, 1);

// ----------------------------------------------------------------------------
// SLIDER
// ----------------------------------------------------------------------------
@slider
knob1.knob_detect_slider();

// ----------------------------------------------------------------------------
// SAMPLE
// ----------------------------------------------------------------------------
@sample

// ----------------------------------------------------------------------------
// GRAPHICS
// ----------------------------------------------------------------------------
@gfx 600 400

knob1.knob_draw();
knob1.knob_detect_reset();
knob1.knob_detect_drag();
knob1.knob_update_slider(1);
knob1.knob_draw_arrows();
